<Page
    x:Class="MikeRobbins.SUGCON.Beacons.Kiosk.Pages.AnimalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer Padding="{x:Bind Frame.Padding, Mode=OneWay}">
            <StackPanel>
                <TextBlock Text="{x:Bind Animal.Name}" Style="{StaticResource TitleTextBlockStyle}" />

                <Image Width="400" Source="{x:Bind Animal.Image }" HorizontalAlignment="Center"></Image>

                <StackPanel HorizontalAlignment="Center" Width="400" Orientation="Horizontal">
                    <TextBlock Text="Sponsor:" VerticalAlignment="Center"></TextBlock> <Button Name="SponsorAnimal" Click="SponsorAnimal_OnClick" Foreground="{ThemeResource ContentDialogBorderThemeBrush}" Content="&#xE734;" FontFamily="Segoe MDL2 Assets" Margin="10,0,10,0" ></Button>

                    <TextBlock Text="Buy Toy:" VerticalAlignment="Center"></TextBlock>
                    <Button Foreground="{ThemeResource ContentDialogBorderThemeBrush}" Content="&#xE719;" FontFamily="Segoe MDL2 Assets" Margin="10,0,0,0"></Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
