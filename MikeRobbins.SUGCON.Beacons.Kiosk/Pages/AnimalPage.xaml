<Page
    x:Class="MikeRobbins.SUGCON.Beacons.Kiosk.Pages.AnimalPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton Icon="Favorite" Label="Sponsor" Click="SponsorAnimal_OnClick"/>
            <AppBarButton Icon="Shop" Label="Buy Toy" Click="Shop_OnClick" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer Padding="{x:Bind Frame.Padding, Mode=OneWay}">
            <StackPanel>
                <TextBlock Text="{x:Bind Animal.Name}" Style="{StaticResource TitleTextBlockStyle}" />

                <Image Width="400" Source="{x:Bind Animal.Image }" HorizontalAlignment="Center"></Image>

                <TextBlock Text="{x:Bind Animal.Description}" Style="{StaticResource ParagraphTextBlockStyle}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
